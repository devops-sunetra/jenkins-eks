
pipeline {
    agent any  // use the existing Jenkins pod
    environment {
        AWS_REGION = 'ap-south-1'
        ACCOUNT_ID = '655445510312'
        REPO_NAME = 'docker-image'
        REGISTRY = "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${REPO_NAME}"
        IMAGE_TAG = "${BUILD_NUMBER}"
        CLUSTER_NAME = 'demo-eks'
        NAMESPACE = 'helm-deployment'
        JAVA_HOME = '/usr/lib/jvm/java-21-openjdk-amd64'
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
    }
    
    stages {
        stage('Cloning Git') {
            steps {
                git branch: 'master', url: 'https://github.com/devops-sunetra/jenkins-eks.git'
            }
        }
        stage('Verify Java') {
            steps {
                sh 'java -version'
                sh 'javac -version'
            }
        }
        stage('Build Maven Project') {
            steps {
                dir('javaapp-standalone') {
                    sh 'mvn clean install'
                }
            }
        }
        stage('Build Docker Image with Kaniko') {
            steps {
                dir('javaapp-standalone') {
                    sh """
                    kubectl run kaniko \
                      --rm -i --tty \
                      --image=gcr.io/kaniko-project/executor:latest \
                      --restart=Never \
                      -- \
                      --dockerfile=Dockerfile \
                      --context=dir://. \
                      --destination=${REGISTRY}:${IMAGE_TAG} \
                      --skip-tls-verify
                    """
                }
            }
        }
        stage('Helm Deploy') {
            steps {
                sh """
                aws eks update-kubeconfig --region ${AWS_REGION} --name ${CLUSTER_NAME}
                kubectl create namespace ${NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                helm upgrade --install my-java-app ./javaapp-standalone/chart/my-java-app \
                  --namespace ${NAMESPACE} \
                  --create-namespace \
                  --set image.repository=${REGISTRY} \
                  --set image.tag=${IMAGE_TAG}
                """
            }
        }
    }
    
    post {
        success { echo "✅ Deployment successful!" }
        failure { echo "❌ Pipeline failed. Check logs." }
    }
}
