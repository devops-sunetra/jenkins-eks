pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        ACCOUNT_ID = '655445510312'
        REPO_NAME = 'docker-image'
        REGISTRY = "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${REPO_NAME}"
        IMAGE_TAG = "${BUILD_NUMBER}"
        CLUSTER_NAME = 'demo-eks'
        NAMESPACE = 'helm-deployment'
    }

    stages {

        // --- Stage 1: Clone your Git repo ---
        stage('Cloning Git') {
            steps {
                git branch: 'master', url: 'https://github.com/devops-sunetra/jenkins-eks.git'
            }
        }
        stage('Verify Java') {
    steps {
        sh 'java -version'
        sh 'javac -version'
    }
}


        // --- Stage 2: Build Java app ---
        stage('Build Maven Project') {
            steps {
                dir('javaapp-standalone') {
                    sh 'mvn clean install'
                }
            }
        }

        // --- Stage 3: Build Docker image ---
        stage('Build Docker Image') {
            steps {
                dir('javaapp-standalone') {
                    script {
                        dockerImage = docker.build("${REGISTRY}:${IMAGE_TAG}", ".")
                    }
                }
            }
        }

        // --- Stage 4: Push Docker image to AWS ECR ---
        stage('Push to ECR') {
            steps {
                script {
                    sh """
                    aws ecr get-login-password --region ${AWS_REGION} \
                    | docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                    docker push ${REGISTRY}:${IMAGE_TAG}
                    """
                }
            }
        }

        // --- Stage 5: Deploy to EKS via Helm ---
        stage('Helm Deploy') {
            steps {
                script {
                    // Update kubeconfig (ensures Jenkins can talk to cluster)
                    sh """
                    aws eks update-kubeconfig --region ${AWS_REGION} --name ${CLUSTER_NAME}
                    """

                    // Ensure namespace exists
                    sh """
                    kubectl create namespace ${NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                    """

                    // Deploy Helm chart with latest image tag
                   sh """
                        helm upgrade --install my-java-app ./javaapp-standalone/chart/my-java-app \
                          --namespace ${NAMESPACE} \
                          --create-namespace \
                          --set image.repository=${REGISTRY} \
                          --set image.tag=${IMAGE_TAG}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful! App deployed to EKS cluster: ${CLUSTER_NAME}"
        }
        failure {
            echo "❌ Pipeline failed. Please check the Jenkins logs."
        }
    }
}
